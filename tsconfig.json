{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowUmdGlobalAccess": true,
		"outDir": "dist",
		"rootDir": ".",
	},
    "include": [
        "app/**/*",
        "tools/**/*",
        "migrations/**/*",
        "tests/**/*",
	],
}